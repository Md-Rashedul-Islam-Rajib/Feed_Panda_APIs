generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * Category Schema/Entity
 */
model Category {
  id         String         @id @default(uuid())
  name       String
  slug       String         @unique
  status     CategoryStatus @default(ACTIVE)
  created_At DateTime       @default(now())
  updated_At DateTime       @updatedAt
}

enum CategoryStatus {
  ACTIVE
  INACTIVE
  UPCOMING
  DISCONTINUED
}
